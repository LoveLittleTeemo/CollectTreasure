<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rlyt_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/space_15"
        android:paddingTop="@dimen/space_15"
        android:layout_marginTop="@dimen/space_30"
        android:paddingBottom="@dimen/space_15"
        android:paddingRight="@dimen/space_15"
        android:clickable="true"
        android:visibility="gone"
        android:background="?android:attr/selectableItemBackground">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:paddingBottom="30dp">

        <com.zoesap.collecttreasure.ui.widget.CircleImageView
            android:id="@+id/iv_user_head"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:contentDescription="@string/app_name"
            android:src="@mipmap/ic_user_icon"
            app:border_color="@android:color/white"
            app:border_width="@dimen/space_2" />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_user_head"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="ruayou/纵索"
            android:textColor="@android:color/white"
            android:textSize="14sp" />
    </RelativeLayout>

</RelativeLayout>